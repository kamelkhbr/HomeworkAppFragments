<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#DCD4D4"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/assignment_avatar_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_chat_bubble_outline_24" />

    <TextView
        android:textColor="#070607"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/Assignmentitem_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/assignment_avatar_imageview"
        app:layout_constraintTop_toTopOf="@id/assignment_avatar_imageview"
        tools:text="Assignment Name" />

    <TextView
        android:textColor="#070607"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/Assignmentitem_dueDate_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/assignment_avatar_imageview"
        app:layout_constraintTop_toBottomOf="@id/Assignmentitem_name_textview"
        android:layout_margin="8dp"
        tools:text="Due Date" />





</androidx.constraintlayout.widget.ConstraintLayout>